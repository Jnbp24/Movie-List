if error
    p.error= error

if movies && movies.length
    .movies-container
        each movie in movies
            .movie
                if movie.Poster && movie.Poster !== "N/A"
                    img.movie-poster(src=movie.Poster, alt="N/A")
                h2= movie.Title
                p Release Year: #{movie.Year}
                p Type: #{movie.Type.charAt(0).toUpperCase() + movie.Type.slice(1)}
else if searchQuery
    p No movies found for "#{searchQuery}"